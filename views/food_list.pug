doctype html
html
  head
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    title= title  
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">
    link(rel='stylesheet', href='/stylesheets/foodlist.css')
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@200&display=swap" rel="stylesheet">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

body
    block content
        include navbar.pug    
    h4.first CULINARI JOURNEYS
    h1 The world's largest database of foods
    div(style='background-color:#000000; height:4px; width:100%; margin-left:123px;')
    .dropdown
        button#dropdownMenuButton1.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Sort by
        ul.dropdown-menu(aria-labelledby='dropdownMenuButton1')
            li  
                form(action='/food/sort-alpha', method="get")
                    button.dropdown-item(href='#') Alphabetical Order
            li
                form(action='/food/sort-by-least-calories', method="get")
                    button.dropdown-item(href='#') Least Calories
            li
                form(action='/food/sort-by-most-calories', method="get")
                    button.dropdown-item(href='#') Most Calories
each val in result
        h5= val.foodname
        img(src=val.image, alt="",width='400', height='300')
        P
            strong  Description
        h6= val.comment
        p 
            strong Preparation Video
        .videodiv
            iframe(width='400', height='300', src=val.video, title='YouTube video player', frameborder='0', allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')
        p 
            strong Characteristics
        ol 
            li.ch 
                strong Calories: 
                | #{val.kilocalories}
            li.ch 
                strong Proteins: 
                | #{val.proteins}
            li.ch 
                strong Lipids: 
                | #{val.lipid}
            li.ch 
                strong Carbohydrates: 
                | #{val.carbohydrates}
            li.ch 
                strong Water Percentage: 
                | #{val.water}
        hr
