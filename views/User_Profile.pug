      fill: false,
      borderColor: 'white',
      backgroundColor:"white",
      data:[Sunday,Saturday,Friday,Thursday,Wednesday,Tuesday,Monday],
  }]
  };
  const config = {
    type: 'line',
    data,
    options:{}
  };
  var myChart = new Chart(document.getElementById('myChart'),config);