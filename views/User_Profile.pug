  var Thursday = document.getElementById('Thursday').getAttribute('value');
  var Friday = document.getElementById('Friday').getAttribute('value');
  var Saturday = document.getElementById('Saturday').getAttribute('value');
  var Sunday = document.getElementById('Sunday').getAttribute('value');

