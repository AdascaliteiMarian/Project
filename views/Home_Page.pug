doctype html
html
  head
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">
    title= title
    link(rel='stylesheet', href='/stylesheets/Home.css')
    <script src="Home_Page.js"></script>
  body
    block content
        include navbar.pug
        form.box(action="/food/add", method="post")
            h3 Add a type of food you enjoy
            h4(style='color:red;')= letters_instead
            h4(style='color:white;')= warning_not_admin
            h4(style='color:white;')= warning_inputs
            input(type='text', name='foodname', placeholder='Food name')
            br
            input(type='text', name='comment', placeholder='Description')
                
            br
            input(type='text', name='kilocalories', placeholder='Kilocalories')
            
            br
            input(type='text', name='proteins', placeholder='Proteins')
            
            br
            input(type='text', name='lipid', placeholder='Lipids')
            
            br
            input(type='text', name='carbohydrates', placeholder='Carbohydrates')
            
            br
            input(type='text', name='water', placeholder='Water Percentage')
            
            br
            input(type='submit', value="ADD FOOD")