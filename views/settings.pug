doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/settings.css')
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  body
    block content
    include navbar.pug
    .main-body
    .row.gutters-sm
      .col-md-auto.mb-3
        .card
          .card-body
            .d-flex.flex-column.align-items-center.text-center
              img.rounded-circle(src='https://bootdey.com/img/Content/avatar/avatar7.png', alt='Admin', width='131')
              .mt-3
                h4= name
                p.text-secondary.mb-1= title
                p.text-muted.font-size-sm= address
form(action="/change-user-info", method="post")
  .mb-3
    label.form-label(for='formGroupExampleInput') Change Title
    input#formGroupExampleInput.form-control(type='text', placeholder='Title', name = 'title')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Change Email
    input#formGroupExampleInput2.form-control(type='text', placeholder='Email', name = 'email')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Change Phone
    input#formGroupExampleInput2.form-control(type='text', placeholder='Phone', name = 'phone')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Change Address
    input#formGroupExampleInput2.form-control(type='text', placeholder='Address', name = 'address')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Github link
    input#formGroupExampleInput2.form-control(type='text', placeholder='Github', name = 'github')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Twitter Link
    input#formGroupExampleInput2.form-control(type='text', placeholder='Twitter', name = 'twitter')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Instagram Link
    input#formGroupExampleInput2.form-control(type='text', placeholder='Instagram', name = 'instagram')

  .mb-3
    label.form-label(for='formGroupExampleInput2') Facebook link
    input#formGroupExampleInput2.form-control(type='text', placeholder='Facebook', name = 'facebook')
    br
    input(type='submit', value="Submit Changes")



      